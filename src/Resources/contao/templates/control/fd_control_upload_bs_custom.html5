<label class="custom-file d-block">
    <input <?= $this->layout->getControlAttributes($this->widget)->addClass('custom-file-input') ?>>
    <span class="custom-file-label"></span>
</label>
<script>
    jQuery(document).on('change', '#<?= $this->layout->getControlAttributes($this->widget)->getId() ?>', function() {
        var label = jQuery(this).next('.custom-file-label');
        var file = this.files[0].name;
        label.text(file);
    });
</script>
